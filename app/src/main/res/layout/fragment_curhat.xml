<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Curhat"
    android:background="@drawable/ic_bgcurhat">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_logo_pede"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/ib_curhat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_ibcurhat"
        app:layout_constraintEnd_toEndOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragmentcurhat"
        app:layout_constraintTop_toBottomOf="@id/ib_curhat"
        app:layout_constraintStart_toStartOf="@id/ib_curhat"
        app:layout_constraintEnd_toEndOf="@id/ib_curhat"
        android:paddingTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>