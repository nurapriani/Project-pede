<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Video"
    android:background="@drawable/ic_welcome_page_bg">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
    android:id="@+id/logo"
    android:layout_width="230dp"
    android:layout_height="220dp"
    android:src="@drawable/ic_logo_pede"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_video"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/ib_video1"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_ibvideo1"
        app:layout_constraintLeft_toRightOf="@id/iv1"
        app:layout_constraintTop_toBottomOf="@id/logo"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <ImageView
        android:id="@+id/iv2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_video"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/ib_video2"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_ibvideo2"
        app:layout_constraintEnd_toEndOf="@id/ib_video1"
        app:layout_constraintStart_toStartOf="@id/ib_video1"
        app:layout_constraintTop_toBottomOf="@id/ib_video1"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/iv3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_video"
        app:layout_constraintTop_toBottomOf="@id/iv2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/ib_video3"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_ibvideo3"
        app:layout_constraintStart_toStartOf="@id/ib_video2"
        app:layout_constraintTop_toBottomOf="@id/ib_video2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/iv4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_video"
        app:layout_constraintTop_toBottomOf="@id/iv3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/ib_video4"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_ibvideo4"
        app:layout_constraintStart_toStartOf="@id/ib_video3"
        app:layout_constraintTop_toBottomOf="@id/ib_video3"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/iv5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_video"
        app:layout_constraintTop_toBottomOf="@id/iv4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/ib_video5"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_ibvideo5"
        app:layout_constraintStart_toStartOf="@id/ib_video4"
        app:layout_constraintTop_toBottomOf="@id/ib_video4"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>