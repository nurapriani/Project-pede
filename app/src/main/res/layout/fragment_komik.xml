<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Komik"
    android:background="@drawable/ic_welcome_page_bg">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_logo_pede"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/ib_komik1"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_ibkomik1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ib_komik2"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_ibkomik2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ib_komik3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ibkomik3"
        app:layout_constraintEnd_toEndOf="@id/ib_komik1"
        app:layout_constraintStart_toStartOf="@id/ib_komik1"
        app:layout_constraintTop_toBottomOf="@id/ib_komik1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ib_komik4"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ibkomik4"
        app:layout_constraintEnd_toEndOf="@id/ib_komik2"
        app:layout_constraintStart_toStartOf="@id/ib_komik2"
        app:layout_constraintTop_toBottomOf="@+id/ib_komik2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ib_komik5"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ibkomik5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_komik4"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>